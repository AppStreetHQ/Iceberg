/* Iceberg Terminal CSS */

/* Global styles */
Screen {
    background: black;
}

/* Header */
Header {
    background: black;
    color: white;
}

/* Market indices banner */
MarketIndices {
    dock: top;
    height: auto;
    max-height: 5;
    background: black;
    border-bottom: solid #333333;
    padding: 1 2;
}

#indices_container {
    width: 100%;
    height: auto;
}

.title_cell {
    width: 1fr;
    content-align: left middle;
    padding: 0 1;
    color: white;
    text-style: bold;
}

.range_cell {
    width: 40;
    content-align: right middle;
    padding: 0 1;
    color: white;
}

/* Main content area */
#content {
    height: 1fr;
}

/* Left panel - ticker banner + watchlist */
#left_panel {
    width: 50;
    border-right: solid #333333;
    background: black;
}

/* ASCII ticker banner */
#ticker_banner {
    height: auto;
    background: black;
    border-bottom: solid #333333;
    padding: 1;
}

#ticker_ascii {
    color: #00ff00;
    background: black;
}

#company_name {
    color: white;
    background: black;
    text-style: bold;
    padding: 1 0 0 0;
}

#industry {
    color: white;
    background: black;
    padding: 0;
}

#market_cap {
    color: white;
    background: black;
    padding: 1 0 0 0;
}

/* Watchlist panel */
#watchlist {
    height: 1fr;
    background: black;
}

#watchlist_header {
    height: auto;
    padding: 0 1 1 1;
    background: black;
    color: white;
}

#ticker_list {
    height: 1fr;
    background: black;
    border: none;
}

#ticker_list > .option-list--option-highlighted {
    background: #1a1a1a;
}

#ticker_list:focus > .option-list--option-highlighted {
    background: #2a2a2a;
}

/* Main display area */
#main_display {
    width: 1fr;
    background: black;
}

#chart {
    height: 50%;
    border-bottom: solid #333333;
    padding: 0 1;
    background: black;
}

#chart_container {
    height: 100%;
    background: black;
}

#chart_header {
    height: auto;
    padding: 2 0 2 0;
    background: black;
    color: white;
}

#chart_display {
    height: auto;
    background: black;
    color: white;
}

#chart_stats {
    height: auto;
    padding: 1 0 0 0;
    background: black;
    color: white;
}

#technical {
    height: 30%;
    border-bottom: solid #333333;
    padding: 1;
    background: black;
}

#scores {
    height: 20%;
    padding: 1;
    background: black;
}

#scores_container {
    height: 100%;
    background: black;
}

#scores_display {
    color: white;
}

#technical_container {
    height: 100%;
    background: black;
}

#technical_display {
    color: white;
}

/* Status bar */
StatusBar {
    dock: bottom;
    height: 1;
    background: black;
}

#status_container {
    width: 100%;
    height: 1;
    background: black;
}

#status_left {
    width: 1fr;
    content-align: left middle;
    padding: 0 1;
    background: black;
    color: white;
}

#status_right {
    width: auto;
    content-align: right middle;
    padding: 0 1;
    background: black;
    color: white;
}

/* Color helpers */
.gain {
    color: #00ff00;
}

.loss {
    color: #ff0000;
}

.neutral {
    color: #888888;
}
